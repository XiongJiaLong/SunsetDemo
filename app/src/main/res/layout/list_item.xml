<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:divider="#FFAAAAAA"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="centerCrop"
        android:src="@mipmap/aabbcc"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/list_item_head_img"/>

    <LinearLayout
        android:background="@drawable/list_item_bg"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@mipmap/a123"
            android:id="@+id/list_item_second_img"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="战魂"
                android:id="@+id/list_item_gameName"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
            <TextView
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="公开测试 | 策略 | 100%返利"
                android:id="@+id/list_item_game_instruct"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="QQ交流群:151569514  已入住人数:0人"
                android:id="@+id/list_item_add_message"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btn_get"
            android:layout_marginLeft="5dp"
            android:textSize="9sp"
            android:background="@drawable/button_gift_bg"
            android:text="领取礼包"
            android:layout_width="50dp"
            android:layout_height="20dp" />
        <Button
            android:id="@+id/btn_down"
            android:textSize="9sp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_down_bg"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="下载游戏"
           />
    </LinearLayout>
</LinearLayout>